<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="bunker">
    <pose>0 0 0.14 0 0 0</pose>

    <!-- Real size target from user spec: L=1.023m, W=0.778m, H=0.400m -->
    <link name="base_link">
      <inertial>
        <!-- From spec: weight about 130 kg -->
        <mass>130.0</mass>
        <inertia>
          <!-- Box approximation inertia for 1.023 x 0.778 x 0.4 m, 130 kg -->
          <ixx>8.29</ixx>
          <iyy>13.07</iyy>
          <izz>17.89</izz>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyz>0.0</iyz>
        </inertia>
      </inertial>

      <collision name="chassis_collision">
        <pose>0 0 0.20 0 0 0</pose>
        <geometry>
          <box>
            <size>1.023 0.778 0.40</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.2</mu>
              <mu2>1.2</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="chassis_visual">
        <pose>0 0 0.20 0 0 0</pose>
        <geometry>
          <box>
            <size>1.023 0.778 0.40</size>
          </box>
        </geometry>
        <material>
          <ambient>0.15 0.15 0.15 1</ambient>
          <diffuse>0.20 0.20 0.20 1</diffuse>
          <specular>0.05 0.05 0.05 1</specular>
        </material>
      </visual>

      <!-- Track visuals (approximate) -->
      <visual name="left_track_visual">
        <pose>0 0.309 0.14 0 0 0</pose>
        <geometry>
          <box>
            <!-- From spec: track width 150 mm -->
            <size>1.00 0.15 0.18</size>
          </box>
        </geometry>
        <material>
          <ambient>0.05 0.05 0.05 1</ambient>
          <diffuse>0.08 0.08 0.08 1</diffuse>
        </material>
      </visual>

      <visual name="right_track_visual">
        <pose>0 -0.309 0.14 0 0 0</pose>
        <geometry>
          <box>
            <size>1.00 0.15 0.18</size>
          </box>
        </geometry>
        <material>
          <ambient>0.05 0.05 0.05 1</ambient>
          <diffuse>0.08 0.08 0.08 1</diffuse>
        </material>
      </visual>
    </link>

    <link name="left_wheel">
      <pose>0 0.309 0.14 1.5708 0 0</pose>
      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.02</ixx>
          <iyy>0.02</iyy>
          <izz>0.02</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="left_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.14</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="left_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.14</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.02 0.02 0.02 1</ambient>
          <diffuse>0.03 0.03 0.03 1</diffuse>
        </material>
      </visual>
    </link>

    <link name="right_wheel">
      <pose>0 -0.309 0.14 1.5708 0 0</pose>
      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.02</ixx>
          <iyy>0.02</iyy>
          <izz>0.02</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="right_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.14</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="right_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.14</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.02 0.02 0.02 1</ambient>
          <diffuse>0.03 0.03 0.03 1</diffuse>
        </material>
      </visual>
    </link>

    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <plugin
      filename="gz-sim-diff-drive-system"
      name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <!-- Approx from total width 0.778 and track width 0.150 -->
      <wheel_separation>0.628</wheel_separation>
      <!-- Tuned to better clear 170 mm obstacle class in spec -->
      <wheel_radius>0.17</wheel_radius>
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
      <odom_publish_frequency>50</odom_publish_frequency>
      <!-- From spec: speed up to 1.5 m/s -->
      <max_linear_velocity>1.5</max_linear_velocity>
      <max_angular_velocity>2.5</max_angular_velocity>
      <min_linear_velocity>-1.0</min_linear_velocity>
      <min_angular_velocity>-2.5</min_angular_velocity>
    </plugin>
  </model>
</sdf>
