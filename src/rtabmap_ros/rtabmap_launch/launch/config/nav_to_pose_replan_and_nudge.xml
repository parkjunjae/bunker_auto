<!--
  Replan if the path becomes invalid or expires, and add a small forward nudge
  in recovery to escape deadlocks at narrow entrances.
-->
<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <RecoveryNode number_of_retries="6" name="NavigateRecovery">
      <PipelineSequence name="NavigateWithReplanning">
        <RateController hz="2.0">
          <RecoveryNode number_of_retries="1" name="ComputePathToPose">
            <Fallback>
              <ReactiveSequence>
                <Inverter>
                  <PathExpiringTimer seconds="3" path="{path}"/>
                </Inverter>
                <Inverter>
                  <GlobalUpdatedGoal/>
                </Inverter>
                <IsPathValid path="{path}"/>
              </ReactiveSequence>
              <ComputePathToPose goal="{goal}" path="{path}" planner_id="GridBased"/>
            </Fallback>
            <ClearEntireCostmap name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_entirely_global_costmap"/>
          </RecoveryNode>
        </RateController>
        <RecoveryNode number_of_retries="1" name="FollowPath">
          <FollowPath path="{path}" controller_id="RLController"/>
          <ClearEntireCostmap name="ClearLocalCostmap-Context" service_name="local_costmap/clear_entirely_local_costmap"/>
        </RecoveryNode>
      </PipelineSequence>
      <ReactiveFallback name="RecoveryFallback">
        <GoalUpdated/>
        <RoundRobin name="RecoveryActions">
          <Sequence name="ClearingActions">
            <ClearEntireCostmap name="ClearLocalCostmap-Subtree" service_name="local_costmap/clear_entirely_local_costmap"/>
            <ClearEntireCostmap name="ClearGlobalCostmap-Subtree" service_name="global_costmap/clear_entirely_global_costmap"/>
          </Sequence>
          <!-- 막힘 상황에서 임시 목표를 만들어 우회한다 -->
          <Sequence name="TemporaryGoalRecovery">
          <!-- goal_heading_weight: 목표 방향 선호 가중치(0~1, 높을수록 전진 방향 우선) -->
          <!-- min_goal_cos: 목표 방향과의 최소 코사인(0.5≈60도 이내만 허용) -->
          <!-- debug_log: 임시 목표 선택 로그 출력 여부 -->
            <IsStuck/>
            <PickTemporaryGoal temp_goal="{temp_goal}" goal="{goal}" goal_heading_weight="0.9" min_goal_cos="0.5" debug_log="true"/>
            <ComputePathToPose goal="{temp_goal}" path="{temp_path}" planner_id="GridBased"/>
            <FollowPath path="{temp_path}" controller_id="RLController"/>
          </Sequence>
          <DriveOnHeading dist_to_travel="0.20" speed="0.10" time_allowance="4"/>
          <Spin spin_dist="1.57"/>
          <Wait wait_duration="5"/>
          <BackUp backup_dist="0.30" backup_speed="0.05"/>
        </RoundRobin>
      </ReactiveFallback>
    </RecoveryNode>
  </BehaviorTree>
</root>
